<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<gep name="Exception" title="C64P Exception Handler" version="1">

<page name="Module" title="Module Settings">
<html><body><table>
  <tr>
      <td><form>
        <p>C64P exception handler</p>
        <p> </p>
      </form></td>
  </tr>
  <tr>
    <td><control type="checkbox" label="Add the Exception module to my configuration" value="value:this.$used" bold="true"/></td>
  </tr>
  <tr></tr>
  <tr><td>
      <h1>Function Hooks</h1>
      <table>
        <tr>
          <td><control type="label" label="Exception Hook" align="left"/></td>
          <td><control type="editbox" 
               value="value:this.exceptionHook"
               tooltip="value:this.exceptionHook.$summary"/></td>
        </tr>
        <tr>
          <td><control type="label" label="Internal Hook" align="left"/></td>
          <td><control type="editbox" 
               value="value:this.internalHook"
               tooltip="value:this.internalHook.$summary"/></td>
        </tr>
        <tr>
          <td><control type="label" label="External Hook" align="left"/></td>
          <td><control type="editbox" 
               value="value:this.externalHook"
               tooltip="value:this.externalHook.$summary"/></td>
        </tr>
        <tr>
          <td><control type="label" label="NMI Hook" align="left"/></td>
          <td><control type="editbox" 
               value="value:this.nmiHook"
               tooltip="value:this.nmiHook.$summary"/></td>
        </tr>
        <tr>
          <td><control type="label" label="Return Hook" align="left"/></td>
          <td><control type="editbox" 
               value="value:this.returnHook"
               tooltip="value:this.returnHook.$summary"/></td>
        </tr>
      </table>
      </td><td>
      <h1>Additional Settings</h1>
      <table>
        <tr>
          <td><control type="checkbox" 
               label="Enable handling of memory protection"
               value="value:this.enableExternalMPC" 
               tooltip="value:this.enableExternalMPC.$summary"/></td>
        </tr>
        <tr>
          <td><control type="checkbox" 
               label="Enable print"
               value="value:this.enablePrint" 
               tooltip="value:this.enablePrint.$summary"/></td>
        </tr>
        <tr>
          <td><control type="checkbox"
               label="Use internal buffer for saving exception context"
               value="value:this.useInternalBuffer"
               tooltip="value:this.useInternalBuffer.$summary"/></td>
        </tr>
      </table>
  </td></tr>
</table></body></html>
</page>
<properties name="Advanced" title="All Options" enabled="true" visible="true" link="this"/>
</gep>

